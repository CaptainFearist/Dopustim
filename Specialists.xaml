    <Grid Background="#FFFFE983">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Верхний Rectangle -->
        <Border Background="#FFD8CF76" MaxHeight="35" VerticalAlignment="Top" Grid.Row="0" Grid.Column="0" Height="35" Grid.RowSpan="2" >
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <Button Style="{DynamicResource ButtonStyleProfile}"  HorizontalAlignment="Left" Margin="10,0,0,0" VerticalAlignment="Center" Grid.Column="2" Width="25" Height="25">
                    <Button.BorderBrush>
                        <ImageBrush ImageSource="/user_person_profile_avatar_icon_190943 (1).png"/>
                    </Button.BorderBrush>
                    <Button.Background>
                        <ImageBrush ImageSource="/user_person_profile_avatar_icon_190943.png"/>
                    </Button.Background>
                </Button>
                <Label Content="Label" HorizontalAlignment="Left" Margin="40,0,0,0" VerticalAlignment="Center" Height="25" Width="45" Grid.Column="2"/>
            </Grid>
        </Border>
        <!-- Нижний Rectangle -->
        <Border Background="#FFD8CF76" MinHeight="35" MaxHeight="35" VerticalAlignment="Bottom" Margin="0,399,0,0" Grid.Row="1" Height="35">
            <!-- Grid для кнопок -->
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>


